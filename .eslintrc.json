{
    "env": {
        "node": true,
        "es2021": true
    },
    "plugins": [
        "import"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended"
    ],
    "rules": {
        "import/no-unresolved": "error", // ðŸš¨ catch missing/typoed files
        "import/named": "error", // ðŸš¨ catch wrong named exports
        "import/default": "error",
        "import/no-duplicates": "error"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".ts",
                    ".jsx",
                    ".tsx"
                ]
            }
        }
    }
}